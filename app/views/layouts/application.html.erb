<!DOCTYPE html>
<html>
<head>
  <title>MakeItRainToday</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <p class="navbar-brand">
            <h3><%= link_to "MakeItRain.Today", root_path %></h3>
          </p>
          <div class="pull-right">
            <% if user_signed_in? %>
              Signed in as <%= current_user.email %>. Not you?
              <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
            <% else %>
              <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
              <%= link_to image_tag('blue-on-dark@2x.png'), user_omniauth_authorize_path(:stripe_connect) %>
            <% end %>
          </div>
        </div>
        <br />
      </nav>
    <br />
    <br />
    <br />
    <br />
  </div>

  <% if flash[:notice] %>
    <div class="alert alert-success text-center" role="alert"><%= flash[:notice] %></div>
  <% end %>

<%= yield %>

</body>
</html>
