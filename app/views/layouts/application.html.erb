              <%= link_to "Take me to my User Profile", user_path(current_user.id), class: "btn btn-success btn-lg" %>
            <% else %>
              <%= link_to image_tag('blue-on-dark@2x.png'), user_omniauth_authorize_path(:stripe_connect) %>
            <% end %>
          </div>
        </p>
        </div>
        <br />
      </nav>
<br />
